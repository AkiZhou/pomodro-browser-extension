{
    "manifest_version": 2,
    "name": "Pomodoro Timer & Web blocker",
    "version": "0.1.0",
    "author": "Aki Zhou, ",
    "description": "Pomodoro timer that blocks selected websites for more focused environment",

    "browser_action": {
        "default_title": "Pomodoro",
        "default_popup": "popup.html"
    },

    "background": {
        "scripts": [
            "./js/background.js"
        ],
        "persistent": true
    },

    "permissions": [
        "<all_urls>",
        "webRequest",
        "webRequestBlocking"
    ]
}
